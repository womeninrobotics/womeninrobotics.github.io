{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "w: serve",
            "type": "shell",
            "command": "bundle exec jekyll serve --livereload",
            "group": {
                "kind": "test",
                "isDefault": false
            },
        },
        {
            "label": "w: drafts",
            "type": "shell",
            "command": "bundle exec jekyll serve --drafts",
            "problemMatcher": [],
            "dependsOn": [
                "c: clean"
            ]
        },
        {
            "label": "b: build",
            "type": "shell",
            "command": "bundle exec jekyll build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "label": "u: update",
            "type": "shell",
            "command": "bundle update",
            "problemMatcher": []
        },
        {
            "label": "i: install",
            "type": "shell",
            "command": "bundle install",
            "problemMatcher": []
        },
        {
            "label": "t: test",
            "type": "shell",
            "command": ".github/scripts/htmlproofer/entrypoint.sh",
            "problemMatcher": [],
            "dependsOn": [
                "b: build"
            ],
            "group": {
                "kind": "test",
                "isDefault": false
            },
        },
        {
            "label": "c: clean",
            "type": "shell",
            "command": "rm -fr _site vendor .jekyll-cache",
            "problemMatcher": [],
        },
        {
            "label": "CMS",
            "type": "shell",
            "command": "npx netlify-cms-proxy-server",
            "problemMatcher": []
        },
        {
            "label": "Get json",
            "type": "shell",
            "command": ".github/actions/get-google-sheets-json/get_json.sh",
            "options": {
                "env": {
                    "SHEET_URL": "${input:sheet_url}",
                    "OUTPUT_FILE": "${input:output_file}"
                }
            },
            "problemMatcher": []
        },
    ],
    "inputs": [
        {
            "id": "sheet_url",
            "type": "promptString",
            "description": "Google Sheets URL",
            "default": "https://docs.google.com/spreadsheets/d/e/2PACX-1vTMYWr-9rNI300A9YQeYK8hbiCa0cJNGhqtZ9yn7QsYKvyTJcM_9DQcGFheDJzXoS1aonhkCR9Y0fRb/pub?gid=610270313&single=true&output=csv"
        },
        {
            "id": "output_file",
            "type": "promptString",
            "description": "Output file",
            "default": "_data/wir_day_events.json"
        }
    ]
}
