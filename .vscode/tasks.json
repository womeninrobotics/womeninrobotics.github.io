{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "w: serve website",
            "type": "shell",
            "command": "bundle exec jekyll serve",
            "problemMatcher": []
        },
        {
            "label": "b: build website",
            "type": "shell",
            "command": "bundle exec jekyll build",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "u: update",
            "type": "shell",
            "command": "bundle update",
            "problemMatcher": []
        },
        {
            "label": "i: install",
            "type": "shell",
            "command": "bundle install",
            "problemMatcher": []
        },
        {
            "label": "t: test",
            "type": "shell",
            "command": ".github/htmlproofer.rb",
            "dependsOn": [
                "b: build website"
            ],
            "problemMatcher": []
        }
    ]
}
